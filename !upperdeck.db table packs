USE upperdeck;
CREATE TABLE packs (
    id int NOT NULL AUTO_INCREMENT,
    genre varchar(100) NOT NULL,
    year varchar(50) NOT NULL,
    name varchar(50) NOT NULL,
    full_price float NOT NULL DEFAULT 0,
    count_cards float NOT NULL DEFAULT 0,
    1card_price float NOT NULL DEFAULT 0,
);



USE upperdeck;
INSERT INTO packs (genre, year, name, full_price, count_cards, 1card_price)
VALUES
    ('Fantasy', '2023', 'Magic: The Gathering', 500, 36, 15),
    ('Science Fiction', '2023', 'Star Wars', 600, 24, 25),
    ('Adventure', '2022', 'Dungeons & Dragons', 400, 42, 10);
